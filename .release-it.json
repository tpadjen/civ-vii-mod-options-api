{
  "$schema": "https://unpkg.com/release-it/schema/release-it.json",
  "github": {
    "release": true
  },
  "npm": {
    "release": false,
    "publish": false
  },
  "git": {
    "requireBranch": "main"
  },
  "hooks": {
    "after:bump": "npx auto-changelog"
  },
  "plugins": {
    "@j-ulrich/release-it-regex-bumper": {
      "out": [
        {
          "file": "Options-API.modinfo",
          "search": "tbq_options_api\" version=\"{{semver}}\"",
          "replace": "tbq_options_api\" version=\"{{versionWithoutPrerelease}}\""
        },
        {
          "file": "Options-API.modinfo",
          "search": "<Version>{{semver}}",
          "replace": "<Version>{{versionWithoutPrerelease}}"
        }
      ]
    }
  }
}
